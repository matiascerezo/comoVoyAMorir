<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_muertes"
    android:background="#808080"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:labelFor="@+id/secondName"
    tools:context="com.example.matias.comovoyamorir.muertes.Muertes">

    <ImageView
        android:layout_width="380dp"
        android:layout_height="400dp"
        app:srcCompat="@drawable/lapida"
        android:id="@+id/imagenMuerte"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/botonVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botonVolver"
        android:layout_marginRight="70dp"
        android:layout_marginStart="14dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:background="@android:color/background_light"/>

    <ImageView
        android:layout_width="220dp"
        app:srcCompat="@drawable/blanco"
        android:id="@+id/fondoBlanco"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_height="130dp" />

    <TextView
        android:layout_width="210dp"
        android:layout_height="110dp"
        android:id="@+id/mostrarMuertes2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <Button
        android:text="@string/botonSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botonSalir"
        android:layout_marginLeft="23dp"
        android:layout_alignBaseline="@+id/botonVolver"
        android:layout_alignBottom="@+id/botonVolver"
        android:layout_toEndOf="@+id/tvMostrarAnyo"
        android:background="@android:color/background_light" />

    <TextView
        android:layout_width="135dp"
        android:layout_height="36dp"
        android:id="@+id/mostrarMuertes"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginBottom="63dp"
        android:layout_above="@+id/fondoBlanco"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="165dp"
        android:layout_height="20dp"
        android:id="@+id/tvMostrarAnyo"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginTop="37dp"
        android:layout_alignTop="@+id/mostrarMuertes"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/rip"
        android:id="@+id/rip"
        android:layout_above="@+id/mostrarMuertes"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp" />

</RelativeLayout>
